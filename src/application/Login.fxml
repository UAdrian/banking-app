<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginController">
   <children>
      <Pane layoutX="12.0" layoutY="57.0" prefHeight="130.0" prefWidth="280.0" styleClass="pane">
         <children>
            <TextField fx:id="txtUsername" layoutX="28.0" layoutY="26.0" onAction="#login" promptText="Username" style="-fx-background-radius: 10; -fx-background-insets: 2;">
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
            <PasswordField fx:id="txtPassword" layoutX="28.0" layoutY="65.0" onAction="#login" promptText="Password" style="-fx-background-radius: 10; -fx-background-insets: 2;">
               <font>
                  <Font size="18.0" />
               </font>
            </PasswordField>
         </children>
         <padding>
            <Insets left="10.0" right="50.0" />
         </padding>
      </Pane>
      <Button layoutX="117.0" layoutY="200.0" mnemonicParsing="false" onAction="#login" text="Login">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Label fx:id="lblStatus" alignment="CENTER" layoutY="10.0" prefHeight="39.0" prefWidth="300.0" text="Login" textFill="#4a96ad">
         <font>
            <Font size="18.0" />
         </font>
         <padding>
            <Insets bottom="5.0" />
         </padding>
      </Label>
      <Button layoutX="72.0" layoutY="247.0" mnemonicParsing="false" onAction="#forgotPassword" text="Forgot Password">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
